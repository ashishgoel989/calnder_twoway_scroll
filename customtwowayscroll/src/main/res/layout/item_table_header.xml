<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calendarBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin8dp"
        android:background="@color/backgroundPrimary">

        <ImageView
            android:id="@+id/iv_selected_fot"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/tv_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/tv_room_type"
            style="@style/CustomTextViewGray"
            android:text="1"
            android:textColor="@color/fontSecondary60"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font12dp"
            android:layout_marginLeft="@dimen/margin1dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>

</LinearLayout>
